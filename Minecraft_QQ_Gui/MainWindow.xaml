                            <Button
                                x:Name="MysqlConnect"
                                Width="70"
                                Height="25"
                                Margin="162,173,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Click="MysqlConnect_Click"
                                Content="连接"
                                FontSize="16"
                                Foreground="White"
                                IsDefault="True"
