                            <TextBox
                                Width="152"
                                Height="22"
                                Margin="80,39,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                FontSize="16"
                                Text="{Binding Admin.UnMute}"
                                TextWrapping="Wrap" />
                            <Label
                                Width="74"
                                Height="29"
                                Margin="1,63,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="查询名字"
                                Style="{DynamicResource Label}" />
                            <TextBox
                                Width="152"
                                Height="22"
                                Margin="80,69,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                FontSize="16"
                                Text="{Binding Admin.CheckBind}"
                                TextWrapping="Wrap" />
                            <Label
                                Width="74"
                                Height="29"
                                Margin="1,92,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="重命名"
                                Style="{DynamicResource Label}" />
                            <TextBox
                                Width="152"
                                Height="22"
                                Margin="80,98,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                FontSize="16"
                                Text="{Binding Admin.Rename}"
                                TextWrapping="Wrap" />
                            <Label
                                Width="74"
                                Height="29"
                                Margin="1,121,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="维护切换"
                                Style="{DynamicResource Label}" />
                            <TextBox
                                Width="152"
                                Height="22"
                                Margin="80,126,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                FontSize="16"
                                Text="{Binding Admin.Fix}"
                                TextWrapping="Wrap" />
                            <Label
                                Width="74"
                                Height="29"
                                Margin="1,150,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="重读配置"
                                Style="{DynamicResource Label}" />
                            <TextBox
                                Width="152"
                                Height="22"
                                Margin="80,156,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                FontSize="16"
                                Text="{Binding Admin.Reload}"
                                TextWrapping="Wrap" />
                            <Label
                                Width="74"
                                Height="29"
                                Margin="1,179,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="设置昵称"
                                Style="{DynamicResource Label}" />
                            <TextBox
                                Width="152"
                                Height="22"
                                Margin="80,184,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                FontSize="16"
                                Text="{Binding Admin.Nick}"
                                TextWrapping="Wrap" />
                            <Label
                                Height="29"
                                Margin="2,266,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="反馈Q号"
                                Style="{DynamicResource Label}" />
                            <TextBox
                                Width="152"
                                Height="22"
                                Margin="80,270,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                FontSize="16"
                                Text="{Binding Admin.SendQQ}"
                                TextWrapping="Wrap" />
                            <Label
                                Width="74"
                                Height="29"
                                Margin="0,208,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="禁绑列表"
                                Style="{DynamicResource Label}" />
                            <Label
                                Width="74"
                                Height="29"
                                Margin="0,237,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="禁言列表"
                                Style="{DynamicResource Label}" />
                            <TextBox
                                Width="152"
                                Height="22"
                                Margin="80,212,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                FontSize="16"
                                Text="{Binding Admin.GetCantBindList}"
                                TextWrapping="Wrap" />
                            <TextBox
                                Width="152"
                                Height="22"
                                Margin="80,240,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                FontSize="16"
                                Text="{Binding Admin.GetMuteList}"
                                TextWrapping="Wrap" />
                        </Grid>
                    </GroupBox>
                    <GroupBox
                        Width="241"
                        Height="193"
                        Margin="9,192,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        BorderBrush="White"
                        Foreground="White"
                        Header="选择设置">
                        <Grid>
                            <CheckBox
                                Width="82"
                                Height="22"
                                Margin="2,4,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="自动应答"
                                FontSize="16"
                                Foreground="White"
                                IsChecked="{Binding Setting.AskEnable}"
                                Style="{DynamicResource Check}" />
                            <CheckBox
                                Width="82"
                                Height="22"
                                Margin="2,29,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="颜色代码"
                                FontSize="16"
                                Foreground="White"
                                IsChecked="{Binding Setting.ColorEnable}"
                                Style="{DynamicResource Check}" />
                            <CheckBox
                                Width="82"
                                Height="22"
                                Margin="2,54,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="维护模式"
                                FontSize="16"
                                Foreground="White"
                                IsChecked="{Binding Setting.FixMode}"
                                Style="{DynamicResource Check}" />
                            <CheckBox
                                Width="82"
                                Height="22"
                                Margin="2,79,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="始终发送消息"
                                FontSize="16"
                                Foreground="White"
                                IsChecked="{Binding Setting.AutoSend}"
                                Style="{DynamicResource Check}" />
                            <CheckBox
                                Width="148"
                                Height="22"
                                Margin="0,4,0,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Content="昵称发送至服务器"
                                FontSize="16"
                                Foreground="White"
                                IsChecked="{Binding Setting.SendNickServer}"
                                Style="{DynamicResource Check}" />
                            <CheckBox
                                Width="148"
                                Height="22"
                                Margin="0,29,0,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Content="昵称发送至群"
                                FontSize="16"
                                Foreground="White"
                                IsChecked="{Binding Setting.SendNickGroup}"
                                Style="{DynamicResource Check}" />
                            <CheckBox
                                Width="148"
                                Height="22"
                                Margin="0,54,0,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Content="可以绑定名字"
                                FontSize="16"
                                Foreground="White"
                                IsChecked="{Binding Setting.CanBind}"
                                Style="{DynamicResource Check}" />
                            <CheckBox
                                Width="148"
                                Height="22"
                                Margin="0,79,0,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Content="发送日志到主群"
                                FontSize="16"
                                Foreground="White"
                                IsChecked="{Binding Setting.SendLog}"
                                Style="{DynamicResource Check}" />
                            <CheckBox
                                Height="22"
                                Margin="2,104,0,0"
                                VerticalAlignment="Top"
                                Content="发送指令到服务器"
                                FontSize="16"
                                Foreground="White"
                                IsChecked="{Binding Setting.SendCommand}"
                                Style="{DynamicResource Check}" />
                            <Label
                                Width="106"
                                Height="29"
                                Margin="2,128,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="发送消息间隔"
                                Style="{DynamicResource Label}" />
                            <TextBox
                                Width="120"
                                Height="22"
                                Margin="112,134,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                FontSize="16"
                                Text="{Binding Setting.SendDelay}"
                                TextWrapping="Wrap" />
                        </Grid>
                    </GroupBox>
                    <GroupBox
                        Width="241"
                        Height="118"
                        Margin="501,5,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Header="机器人设定">
                        <Grid>
                            <Label
                                Height="29"
                                Margin="2,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="地址"
                                Style="{DynamicResource Label}" />
                            <TextBox
                                Width="99"
                                Height="22"
                                Margin="49,4,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                FontSize="16"
                                Text="{Binding RobotSetting.IP}"
                                TextWrapping="Wrap" />
                            <Label
                                Height="29"
                                Margin="2,29,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="端口"
                                Style="{DynamicResource Label}" />
                            <TextBox
                                Width="66"
                                Height="22"
                                Margin="49,32,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                FontSize="16"
                                Text="{Binding RobotSetting.Port}"
                                TextWrapping="Wrap" />
                            <Label
                                Height="30"
                                Margin="120,28,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="延迟"
                                Style="{DynamicResource Label}" />
                            <TextBox
                                Width="65"
                                Height="22"
                                Margin="167,32,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                FontSize="16"
                                Text="{Binding RobotSetting.CheckDelay}"
                                TextWrapping="Wrap" />
                            <CheckBox
                                Height="22"
                                Margin="0,4,2,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Content="检测断开"
                                FontSize="16"
                                Foreground="White"
                                IsChecked="{Binding RobotSetting.Check}"
                                Style="{DynamicResource Check}" />
                            <Label
                                Width="42"
                                Height="28"
                                Margin="2,58,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="账户"
                                Style="{DynamicResource Label}" />
                            <TextBox
                                x:Name="QQ"
                                Width="183"
                                Height="22"
                                Margin="49,61,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                FontSize="16"
                                Text="{Binding RobotSetting.QQ}"
                                TextWrapping="Wrap" />
                        </Grid>
                    </GroupBox>
                    <GroupBox
                        Width="241"
                        Height="234"
                        Margin="501,128,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Header="Mysql设定">
                        <Grid>
                            <Label
                                Width="42"
                                Height="28"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="地址"
                                Style="{DynamicResource Label}" />
                            <TextBox
                                x:Name="MysqlIP"
                                Width="185"
                                Height="22"
                                Margin="47,3,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                FontSize="16"
                                Text="{Binding Database.IP}"
                                TextWrapping="Wrap" />
                            <Label
                                Width="42"
                                Height="28"
                                Margin="0,28,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="端口"
                                Style="{DynamicResource Label}" />
                            <TextBox
                                x:Name="MysqlPort"
                                Width="185"
                                Height="22"
                                Margin="47,31,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                FontSize="16"
                                Text="{Binding Database.Port}"
                                TextWrapping="Wrap" />
                            <Label
                                Width="42"
                                Height="28"
                                Margin="0,56,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="用户"
                                Style="{DynamicResource Label}" />
                            <TextBox
                                x:Name="MysqlUser"
                                Width="185"
                                Height="22"
                                Margin="47,59,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                FontSize="16"
                                Text="{Binding Database.User}"
                                TextWrapping="Wrap" />
                            <Label
                                Width="42"
                                Height="28"
                                Margin="0,84,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="密码"
                                Style="{DynamicResource Label}" />
                            <PasswordBox
                                x:Name="MysqlPassword"
                                Width="185"
                                Height="22"
