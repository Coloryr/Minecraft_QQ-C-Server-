                                FontSize="16"
                                Text="{Binding Message.FixText}"
                                TextWrapping="Wrap" />
                            <Label
                                Width="112"
                                Height="29"
                                Margin="10,112,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="未知指令文本"
                                Style="{DynamicResource Label}" />
                            <TextBox
                                Width="385"
                                Height="70"
                                Margin="10,146,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                AcceptsReturn="True"
                                FontSize="16"
                                Text="{Binding Message.UnknowText}"
                                TextWrapping="Wrap" />
                            <Label
                                Width="112"
                                Height="29"
                                Margin="10,221,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="不能绑定文本"
                                Style="{DynamicResource Label}" />
                            <TextBox
                                Width="385"
                                Margin="10,255,0,18"
                                HorizontalAlignment="Left"
                                AcceptsReturn="True"
                                FontSize="16"
                                Text="{Binding Message.CantBindText}"
                                TextWrapping="Wrap" />
                            <Label
                                Width="124"
                                Height="28"
                                Margin="408,3,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="没有绑定ID提示"
                                Style="{DynamicResource Label}" />
                            <TextBox
                                Height="70"
                                Margin="408,37,10,0"
                                VerticalAlignment="Top"
                                AcceptsReturn="True"
