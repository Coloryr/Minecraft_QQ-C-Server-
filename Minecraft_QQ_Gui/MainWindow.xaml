<Window
    x:Class="Minecraft_QQ_Gui.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Minecraft_QQ"
    Width="833"
    Height="470"
    Closing="Window_Closing"
    Icon="/Minecraft_QQ.ico"
    KeyDown="Window_KeyDown"
    Loaded="Window_Loaded"
    ResizeMode="CanMinimize"
    mc:Ignorable="d">
    <Window.Background>
        <ImageBrush ImageSource="/Minecraft_QQ.jpg" Stretch="UniformToFill" />
    </Window.Background>
    <Grid>
        <TabControl Margin="0,0,0,0" Background="#00000000">
            <TabItem
                Background="Transparent"
                Header="群设置"
                Style="{DynamicResource TabItem}">
                <Grid>
                    <ListView
                        Name="QQList"
                        Margin="10,10,10,42"
                        Background="#22FFFFFF"
                        Style="{DynamicResource ListViewStyle1}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                                    Width="120"
                                    DisplayMemberBinding="{Binding Group}"
                                    Header="群号" />
                                <GridViewColumn
                                    Width="130"
                                    DisplayMemberBinding="{Binding EnableCommand}"
                                    Header="允许使用指令" />
                                <GridViewColumn
                                    Width="150"
                                    DisplayMemberBinding="{Binding EnableSay}"
                                    Header="开启服务器对话" />
                                <GridViewColumn
                                    Width="120"
                                    DisplayMemberBinding="{Binding IsMain}"
                                    Header="主群日志群" />
                            </GridView>
                        </ListView.View>
                        <ListView.ContextMenu>
                            <ContextMenu>
                                <MenuItem Click="DeleteQQ" Header="删除" />
                                <MenuItem Click="ChangeQQ" Header="修改" />
                                <MenuItem Click="AddQQ" Header="添加" />
                            </ContextMenu>
                        </ListView.ContextMenu>
                    </ListView>
                    <Label
                        Height="28"
                        Margin="10,0,0,10"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Content="提示：右键界面可以进行操作"
                        Style="{DynamicResource Label}" />
                </Grid>
            </TabItem>
            <TabItem
                Background="Transparent"
                Header="启动设置"
                Style="{DynamicResource TabItem}">
                <Grid>
                    <Label
                        Height="28"
                        Margin="10,10,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="启动端口"
                        Style="{DynamicResource Label}" />
                    <TextBox
                        x:Name="Port"
                        Width="130"
                        Height="22"
                        Margin="89,13,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontSize="16"
                        Text="{Binding Socket.Port}"
                        TextWrapping="Wrap" />
                    <Label
                        Width="53"
                        Height="29"
                        Margin="10,43,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="状态："
                        Style="{DynamicResource Label}" />
                    <Label
                        Name="State"
                        Width="156"
                        Height="29"
                        Margin="63,43,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="未知"
                        Style="{DynamicResource Label}" />
                    <Button
                        x:Name="SocketST"
                        Width="80"
                        Height="31"
                        Margin="10,343,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Click="SocketST_Click"
                        Content="关闭端口"
                        FontSize="16"
                        Foreground="White"
                        IsDefault="True"
                        RenderTransformOrigin="0.5,0.5" />
                    <CheckBox
                        Width="82"
                        Height="22"
                        Margin="8,77,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="检测断开"
                        FontSize="16"
                        Foreground="White"
                        IsChecked="{Binding Socket.Check}"
                        Style="{DynamicResource Check}" />
                    <ListView
                        Name="ServerList"
                        Margin="224,10,10,10"
                        Background="#22FFFFFF"
                        Style="{DynamicResource ListViewStyle1}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                                    Width="150"
                                    DisplayMemberBinding="{Binding Name}"
                                    Header="服务器名字" />
                                <GridViewColumn
                                    Width="250"
                                    DisplayMemberBinding="{Binding Addr}"
                                    Header="连接地址" />
                            </GridView>
                        </ListView.View>
                        <ListView.ContextMenu>
                            <ContextMenu>
                                <MenuItem Click="SocketE" Header="编辑配置" />
                                <MenuItem Click="SocketD" Header="断开连接" />
                            </ContextMenu>
                        </ListView.ContextMenu>
                    </ListView>
                    <Label
                        Width="209"
                        Height="28"
                        Margin="10,104,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="注：端口应是未占用的端口"
                        Style="{DynamicResource Label}" />
                </Grid>
            </TabItem>
            <TabItem
                Background="Transparent"
                Header="插件配置"
                Style="{DynamicResource TabItem}">
                <Grid>
                    <GroupBox
                        Width="241"
                        Height="182"
                        Margin="9,5,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        BorderBrush="White"
                        Foreground="White"
                        Header="检测设置">
                        <Grid>
                            <Label
                                Height="30"
                                Margin="9,3,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="检测头"
                                Style="{DynamicResource Label}" />
                            <TextBox
                                Width="153"
                                Height="22"
                                Margin="80,10,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                FontSize="16"
                                Text="{Binding Check.Head}"
                                TextWrapping="Wrap" />
                            <Label
                                Width="74"
                                Height="30"
                                Margin="1,33,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="在线人数"
                                Style="{DynamicResource Label}" />
                            <TextBox
                                Width="152"
                                Height="22"
                                Margin="80,39,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                FontSize="16"
                                Text="{Binding Check.PlayList}"
                                TextWrapping="Wrap" />
                            <Label
                                Width="74"
                                Height="29"
                                Margin="1,63,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="在线状态"
                                Style="{DynamicResource Label}" />
                            <TextBox
                                Height="22"
                                Margin="80,69,5,0"
                                VerticalAlignment="Top"
                                FontSize="16"
                                Text="{Binding Check.ServerCheck}"
                                TextWrapping="Wrap" />
                            <Label
                                Width="74"
                                Height="29"
                                Margin="1,92,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="绑定名字"
                                Style="{DynamicResource Label}" />
                            <TextBox
                                Height="22"
                                Margin="80,98,5,0"
                                VerticalAlignment="Top"
                                FontSize="16"
                                Text="{Binding Check.Bind}"
                                TextWrapping="Wrap" />
                            <Label
                                Width="74"
                                Height="30"
                                Margin="1,121,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="发送消息"
                                Style="{DynamicResource Label}" />
                            <TextBox
                                Height="22"
                                Margin="80,127,5,0"
                                VerticalAlignment="Top"
                                FontSize="16"
                                Text="{Binding Check.Send}"
                                TextWrapping="Wrap" />
                        </Grid>
                    </GroupBox>
                    <GroupBox
                        Width="241"
                        Height="332"
                        Margin="255,5,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        BorderBrush="White"
                        Foreground="White"
                        Header="管理指令">
                        <Grid>
                            <Label
                                Height="30"
                                Margin="17,3,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="禁言"
                                Style="{DynamicResource Label}" />
                            <TextBox
                                Width="152"
                                Height="22"
                                Margin="0,9,5,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                FontSize="16"
                                Text="{Binding Admin.Mute}"
                                TextWrapping="Wrap" />
                            <Label
