                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                FontSize="16"
                                Text="{Binding Database.Database}"
                                TextWrapping="Wrap" />
                            <Label
                                Width="58"
                                Height="28"
                                Margin="0,140,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="状态："
