                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem
                Background="Transparent"
                Header="玩家管理"
                Style="{DynamicResource TabItem}">
                <Grid>
                    <ListView
                        x:Name="PlayerList"
                        Width="625"
                        Height="393"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="#22FFFFFF"
                        Style="{DynamicResource ListViewStyle1}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                                    Width="170"
                                    DisplayMemberBinding="{Binding QQ}"
                                    Header="QQ号" />
                                <GridViewColumn
                                    Width="170"
                                    DisplayMemberBinding="{Binding Name}"
                                    Header="玩家名字" />
                                <GridViewColumn
                                    Width="150"
                                    DisplayMemberBinding="{Binding Nick}"
                                    Header="昵称" />
                                <GridViewColumn
                                    Width="90"
                                    DisplayMemberBinding="{Binding IsAdmin}"
                                    Header="管理员" />
                            </GridView>
                        </ListView.View>
                        <ListView.ContextMenu>
                            <ContextMenu>
                                <MenuItem Click="PlayerD" Header="删除玩家" />
                                <MenuItem Click="PlayerC" Header="修改玩家" />
                                <MenuItem Click="PlayerA" Header="添加玩家" />
                                <MenuItem Click="SearchQQ_" Header="搜索玩家" />
                            </ContextMenu>
                        </ListView.ContextMenu>
                    </ListView>
                    <ListView
                        x:Name="NoIDList"
                        Width="177"
                        Height="203"
                        Margin="640,10,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#22FFFFFF"
                        Style="{DynamicResource ListViewStyle1}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                                    Width="140"
                                    DisplayMemberBinding="{Binding StringFormat=string}"
                                    Header="禁止绑定" />
                            </GridView>
                        </ListView.View>
                        <ListView.ContextMenu>
                            <ContextMenu>
                                <MenuItem Click="NoIDD" Header="删除" />
                                <MenuItem Click="NoIDE" Header="修改" />
                                <MenuItem Click="NoIDA" Header="添加" />
                            </ContextMenu>
                        </ListView.ContextMenu>
                    </ListView>
                    <ListView
                        x:Name="MuteList"
                        Width="177"
                        Height="185"
                        Margin="640,218,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#22FFFFFF"
                        Style="{DynamicResource ListViewStyle1}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                                    Width="140"
                                    DisplayMemberBinding="{Binding StringFormat=string}"
                                    Header="禁言" />
                            </GridView>
                        </ListView.View>
                        <ListView.ContextMenu>
                            <ContextMenu>
                                <MenuItem Click="MuteDD" Header="删除" />
                                <MenuItem Click="MuteDE" Header="修改" />
                                <MenuItem Click="MuteDA" Header="添加" />
                            </ContextMenu>
                        </ListView.ContextMenu>
                    </ListView>

                </Grid>
            </TabItem>
            <TabItem
                Background="Transparent"
                Header="自动应答"
                Style="{DynamicResource TabItem}">
                <Grid>
                    <ListView
                        x:Name="MessageList"
                        Margin="10"
                        Background="#22FFFFFF"
                        Style="{DynamicResource ListViewStyle1}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                                    Width="120"
                                    DisplayMemberBinding="{Binding Name}"
                                    Header="检测" />
                                <GridViewColumn
                                    Width="560"
                                    DisplayMemberBinding="{Binding Addr}"
                                    Header="回复" />
                            </GridView>
                        </ListView.View>
                        <ListView.ContextMenu>
                            <ContextMenu>
                                <MenuItem Click="MessageD" Header="删除回复" />
                                <MenuItem Click="MessageC" Header="修改回复" />
                                <MenuItem Click="MessageA" Header="添加回复" />
                            </ContextMenu>
                        </ListView.ContextMenu>
                    </ListView>

                </Grid>
            </TabItem>
            <TabItem
                Background="Transparent"
                Header="服务器指令"
                Style="{DynamicResource TabItem}">
                <Grid>
                    <ListView
                        x:Name="CommandList"
                        Margin="10"
                        Background="#22FFFFFF"
                        Style="{DynamicResource ListViewStyle1}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                                    Width="120"
                                    DisplayMemberBinding="{Binding Check}"
                                    Header="检测" />
                                <GridViewColumn
                                    Width="230"
                                    DisplayMemberBinding="{Binding Command}"
                                    Header="指令" />
                                <GridViewColumn
                                    Width="80"
                                    DisplayMemberBinding="{Binding Use}"
                                    Header="玩家使用" />
                                <GridViewColumn
                                    Width="80"
                                    DisplayMemberBinding="{Binding Send}"
                                    Header="玩家发送" />
                                <GridViewColumn
                                    Width="200"
                                    DisplayMemberBinding="{Binding Server}"
                                    Header="服务器使用" />
                            </GridView>
                        </ListView.View>
                        <ListView.ContextMenu>
                            <ContextMenu>
                                <MenuItem Click="CommandD" Header="删除指令" />
                                <MenuItem Click="CommandC" Header="修改指令" />
                                <MenuItem Click="CommandA" Header="添加指令" />
                            </ContextMenu>
                        </ListView.ContextMenu>
                    </ListView>

                </Grid>
            </TabItem>
            <TabItem
                Background="Transparent"
                Header="其他"
                Style="{DynamicResource TabItem}">
                <Grid>
                    <GroupBox
                        Margin="10,10,10,10"
                        Background="Transparent"
                        Header="日志">
                        <ScrollViewer Style="{StaticResource ScrollViewer}">
                            <TextBox
                                x:Name="log"
                                MinHeight="344"
                                AcceptsReturn="True"
                                IsReadOnly="True"
                                TextWrapping="Wrap" />
                        </ScrollViewer>
                    </GroupBox>
                    <Button
                        Width="64"
                        Height="24"
                        Margin="0,12,12,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Click="Button_Click_2"
                        Content="清理"
                        FontSize="16"
                        Foreground="White"
                        IsDefault="True" />
                </Grid>
            </TabItem>
        </TabControl>
        <Button
            Width="66"
            Height="29"
            Margin="0,5,10,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Click="Click"
            Content="保存"
            FontSize="16"
            Foreground="White"
            IsDefault="True" />
        <Button
            Width="66"
            Height="29"
            Margin="0,5,81,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Click="Button_Click"
            Content="重载"
            FontSize="16"
            Foreground="White"
            IsDefault="True" />
    </Grid>
</Window>
