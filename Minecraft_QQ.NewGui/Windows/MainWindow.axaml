<Window
    x:Class="Minecraft_QQ_NewGui.Windows.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialog="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="using:Minecraft_QQ_NewGui.Controls"
    xmlns:vm="using:Minecraft_QQ_NewGui.ViewModels"
    Title="Minecraft_QQ"
    Width="800"
    Height="450"
    MinWidth="800"
    MinHeight="450"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Icon="/icon.ico"
    mc:Ignorable="d">

    <dialog:DialogHost DisableOpeningAnimation="True" Identifier="Main">
        <dialog:DialogHost.DataTemplates>
            <DataTemplate DataType="vm:CommandSetModel">
                <view:CommandSetControl DataContext="{Binding}" />
            </DataTemplate>
            <DataTemplate DataType="vm:AddGroupModel">
                <view:AddGroupControl DataContext="{Binding}" />
            </DataTemplate>
            <DataTemplate DataType="vm:AddPlayerModel">
                <view:AddPlayerControl DataContext="{Binding}" />
            </DataTemplate>
            <DataTemplate DataType="vm:AddNameModel">
                <view:AddNameControl DataContext="{Binding}" />
            </DataTemplate>
            <DataTemplate DataType="vm:YesNoModel">
                <view:YesNoControl DataContext="{Binding}" />
            </DataTemplate>
        </dialog:DialogHost.DataTemplates>
        <TabControl SelectedIndex="2">
            <TabItem Margin="0,0,0,5" Header="群设置">
                <DockPanel>
                    <TextBlock
                        Margin="5"
                        DockPanel.Dock="Bottom"
                        Text="右键可以打开菜单" />
                    <DataGrid
                        Name="GroupDataGrid"
                        AutoGenerateColumns="False"
                        Background="Transparent"
                        CanUserResizeColumns="True"
                        CanUserSortColumns="True"
                        ItemsSource="{Binding Groups}"
                        SelectedItem="{Binding GroupItem}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Group}" Header="群号" />
                            <DataGridCheckBoxColumn Binding="{Binding EnableCommand}" Header="允许使用指令" />
                            <DataGridCheckBoxColumn Binding="{Binding EnableSay}" Header="开启服务器对话" />
                            <DataGridCheckBoxColumn Binding="{Binding IsMain}" Header="主群日志群" />
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </TabItem>
            <TabItem Margin="0,0,0,5" Header="服务器列表">
                <DockPanel>
                    <StackPanel Margin="0,0,10,0" DockPanel.Dock="Left">
                        <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,5,0"
                                VerticalAlignment="Center"
                                Text="启动端口" />
                            <TextBox
                                Width="100"
                                Classes="input1"
                                IsEnabled="{Binding SocketEdit}"
                                Text="{Binding SocketPort}" />
                        </StackPanel>
                        <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                            <TextBlock Text="当前状态：" />
                            <TextBlock Text="{Binding State}" />
                        </StackPanel>
                        <CheckBox Content="检测断开" IsChecked="{Binding SocketCheck}" />
                        <Button
                            Width="100"
                            Height="25"
                            Command="{Binding SocketOpen}"
                            Content="{Binding SocketST}" />
                    </StackPanel>
                    <DataGrid
                        Name="ServerDataGrid"
                        AutoGenerateColumns="False"
                        Background="Transparent"
                        CanUserResizeColumns="True"
                        CanUserSortColumns="False"
                        ItemsSource="{Binding Servers}"
                        SelectedItem="{Binding ServerItem}">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Binding="{Binding Name}"
                                Header="服务器名字"
                                IsReadOnly="True" />
                            <DataGridTextColumn
                                Binding="{Binding Addr}"
                                Header="链接地址"
                                IsReadOnly="True" />
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </TabItem>
            <TabItem Margin="0,0,0,5" Header="玩家管理">
                <DockPanel>
                    <UniformGrid
                        Width="180"
                        Margin="10,0,0,0"
                        DockPanel.Dock="Right"
                        Rows="2">
                        <DataGrid
                            Name="NotBindDataGrid"
                            AutoGenerateColumns="False"
                            Background="Transparent"
                            CanUserResizeColumns="True"
                            CanUserSortColumns="False"
                            ItemsSource="{Binding Servers}"
                            SelectedItem="{Binding ServerItem}">
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Binding="{Binding}"
                                    Header="禁止绑定"
                                    IsReadOnly="True" />
                            </DataGrid.Columns>
                        </DataGrid>
                        <DataGrid
                            Name="MuteDataGrid"
                            AutoGenerateColumns="False"
                            Background="Transparent"
                            CanUserResizeColumns="True"
                            CanUserSortColumns="False"
                            ItemsSource="{Binding Servers}"
                            SelectedItem="{Binding ServerItem}">
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Binding="{Binding}"
                                    Header="禁言"
                                    IsReadOnly="True" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </UniformGrid>
                    <DataGrid
                        Name="PlayerDataGrid"
                        AutoGenerateColumns="False"
                        Background="Transparent"
                        CanUserResizeColumns="True"
                        CanUserSortColumns="False"
                        ItemsSource="{Binding Players}"
                        SelectedItem="{Binding PlayerItem}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding UserQQ}" Header="QQ号" />
                            <DataGridTextColumn Binding="{Binding Name}" Header="游戏名" />
                            <DataGridTextColumn Binding="{Binding Nick}" Header="昵称" />
                            <DataGridCheckBoxColumn Binding="{Binding Admin}" Header="管理员" />
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </TabItem>
            <TabItem Margin="0,0,0,5" Header="配置指令">
                <ScrollViewer>
                    <WrapPanel>
                        <Border
                            Margin="5"
                            VerticalAlignment="Top"
                            Classes="t2">
                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,5"
                                    FontSize="17"
                                    Text="指令设置" />
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Width="60"
                                        Margin="0,0,10,0"
                                        Text="检测头" />
                                    <TextBox
                                        Width="160"
                                        Classes="input1"
                                        Text="{Binding Config.CommandHead}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Width="60"
                                        Margin="0,0,10,0"
                                        Text="在线状态" />
                                    <TextBox
                                        Width="160"
                                        Classes="input1"
                                        Text="{Binding Config.CommandOnline}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Width="60"
                                        Margin="0,0,10,0"
                                        Text="在线人数" />
                                    <TextBox
                                        Width="160"
                                        Classes="input1"
                                        Text="{Binding Config.CommandPlayer}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Width="60"
                                        Margin="0,0,10,0"
                                        Text="绑定名字" />
                                    <TextBox
                                        Width="160"
                                        Classes="input1"
                                        Text="{Binding Config.CommandName}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Width="60"
                                        Margin="0,0,10,0"
                                        Text="发送消息" />
                                    <TextBox
                                        Width="160"
                                        Classes="input1"
                                        Text="{Binding Config.CommandSend}" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        <Border
                            Margin="5"
                            VerticalAlignment="Top"
                            Classes="t2">
                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,5"
                                    FontSize="17"
                                    Text="模式设置" />
                                <WrapPanel Width="470">
                                    <ToggleSwitch
                                        Margin="0,0,5,5"
                                        IsChecked="{Binding Config.SettingAsk}"
                                        OffContent="自动应答"
                                        OnContent="自动应答" />
                                    <ToggleSwitch
                                        Margin="0,0,5,5"
                                        IsChecked="{Binding Config.SettingColor}"
                                        OffContent="颜色代码"
                                        OnContent="颜色代码" />
                                    <ToggleSwitch
                                        Margin="0,0,5,5"
                                        IsChecked="{Binding Config.SettingFix}"
                                        OffContent="维护模式"
                                        OnContent="维护模式" />
                                    <ToggleSwitch
                                        Margin="0,0,5,5"
                                        IsChecked="{Binding Config.SettingAuto}"
                                        OffContent="始终发送消息"
                                        OnContent="始终发送消息" />
                                    <ToggleSwitch
                                        Margin="0,0,5,5"
                                        IsChecked="{Binding Config.SettingNickServer}"
                                        OffContent="在服务器显示昵称"
                                        OnContent="在服务器显示昵称" />
                                    <ToggleSwitch
                                        Margin="0,0,5,5"
                                        IsChecked="{Binding Config.SettingNickGroup}"
                                        OffContent="在群显示昵称"
                                        OnContent="在群显示昵称" />
                                    <ToggleSwitch
                                        Margin="0,0,5,5"
                                        IsChecked="{Binding Config.SettingBind}"
                                        OffContent="允许绑定名字"
                                        OnContent="允许绑定名字" />
                                    <ToggleSwitch
                                        Margin="0,0,5,5"
                                        IsChecked="{Binding Config.SettingLog}"
                                        OffContent="发送日志到主群"
                                        OnContent="发送日志到主群" />
                                    <ToggleSwitch
                                        Margin="0,0,5,5"
                                        IsChecked="{Binding Config.SettingCommand}"
                                        OffContent="发送指令到服务器"
                                        OnContent="发送指令到服务器" />
                                    <StackPanel Margin="0,0,10,0" Orientation="Horizontal">
                                        <TextBlock Margin="0,0,10,0" Text="发送消息间隔" />
                                        <TextBox
                                            Width="80"
                                            Classes="input1"
                                            Text="{Binding Config.SettingDelay}" />
                                    </StackPanel>
                                    <StackPanel Margin="0,0,10,0" Orientation="Horizontal">
                                        <TextBlock Margin="0,0,10,0" Text="反馈QQ号" />
                                        <TextBox
                                            Width="120"
                                            Classes="input1"
                                            Text="{Binding Config.SettingQQ}" />
                                    </StackPanel>
                                    <StackPanel Margin="0,0,10,0" Orientation="Horizontal">
                                        <TextBlock Margin="0,0,10,0" Text="机器人地址" />
                                        <TextBox
                                            Width="140"
                                            Classes="input1"
                                            Text="{Binding Config.SettingBot}" />
                                    </StackPanel>
                                    <StackPanel Margin="0,0,10,0" Orientation="Horizontal">
                                        <TextBlock Margin="0,0,10,0" Text="机器人鉴权" />
                                        <TextBox
                                            Width="140"
                                            Classes="input1"
                                            PasswordChar="*"
                                            Text="{Binding Config.SettingAuth}" />
                                    </StackPanel>
                                </WrapPanel>

                            </StackPanel>
                        </Border>
                        <Border
                            Margin="5"
                            VerticalAlignment="Top"
                            Classes="t2">
                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,5"
                                    FontSize="17"
                                    Text="管理员指令" />
                                <WrapPanel>
                                    <StackPanel Margin="0,0,10,0" Orientation="Horizontal">
                                        <TextBlock
                                            Width="60"
                                            Margin="0,0,10,0"
                                            Text="禁言" />
                                        <TextBox
                                            Width="160"
                                            Classes="input1"
                                            Text="{Binding Config.AdminMute}" />
                                    </StackPanel>
                                    <StackPanel Margin="0,0,10,0" Orientation="Horizontal">
                                        <TextBlock
                                            Width="60"
                                            Margin="0,0,10,0"
                                            Text="取消禁言" />
                                        <TextBox
                                            Width="160"
                                            Classes="input1"
                                            Text="{Binding Config.AdminUnmute}" />
                                    </StackPanel>
                                    <StackPanel Margin="0,0,10,0" Orientation="Horizontal">
                                        <TextBlock
                                            Width="60"
                                            Margin="0,0,10,0"
                                            Text="查询名字" />
                                        <TextBox
                                            Width="160"
                                            Classes="input1"
                                            Text="{Binding Config.AdminName}" />
                                    </StackPanel>
                                    <StackPanel Margin="0,0,10,0" Orientation="Horizontal">
                                        <TextBlock
                                            Width="60"
                                            Margin="0,0,10,0"
                                            Text="重命名" />
                                        <TextBox
                                            Width="160"
                                            Classes="input1"
                                            Text="{Binding Config.AdminRename}" />
                                    </StackPanel>
                                    <StackPanel Margin="0,0,10,0" Orientation="Horizontal">
                                        <TextBlock
                                            Width="60"
                                            Margin="0,0,10,0"
                                            Text="维护切换" />
                                        <TextBox
                                            Width="160"
                                            Classes="input1"
                                            Text="{Binding Config.AdminFix}" />
                                    </StackPanel>
                                    <StackPanel Margin="0,0,10,0" Orientation="Horizontal">
                                        <TextBlock
                                            Width="60"
                                            Margin="0,0,10,0"
                                            Text="设置昵称" />
                                        <TextBox
                                            Width="160"
                                            Classes="input1"
                                            Text="{Binding Config.AdminNick}" />
                                    </StackPanel>
                                    <StackPanel Margin="0,0,10,0" Orientation="Horizontal">
                                        <TextBlock
                                            Width="60"
                                            Margin="0,0,10,0"
                                            Text="禁绑列表" />
                                        <TextBox
                                            Width="160"
                                            Classes="input1"
                                            Text="{Binding Config.AdminList}" />
                                    </StackPanel>
                                    <StackPanel Margin="0,0,10,0" Orientation="Horizontal">
                                        <TextBlock
                                            Width="60"
                                            Margin="0,0,10,0"
                                            Text="禁言列表" />
                                        <TextBox
                                            Width="160"
                                            Classes="input1"
                                            Text="{Binding Config.AdminMuteList}" />
                                    </StackPanel>
                                    <StackPanel Margin="0,0,10,0" Orientation="Horizontal">
                                        <TextBlock
                                            Width="60"
                                            Margin="0,0,10,0"
                                            Text="重读配置" />
                                        <TextBox
                                            Width="160"
                                            Classes="input1"
                                            Text="{Binding Config.AdminReload}" />
                                    </StackPanel>
                                </WrapPanel>
                            </StackPanel>
                        </Border>
                        <Border
                            Margin="5"
                            VerticalAlignment="Top"
                            Classes="t2">
                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,5"
                                    FontSize="17"
                                    Text="数据库设置" />
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Width="60"
                                        Margin="0,0,10,0"
                                        Text="链接地址" />
                                    <TextBox
                                        Width="160"
                                        Classes="input1"
                                        IsEnabled="{Binding Database.Enable}"
                                        Text="{Binding Database.Url}" />
                                </StackPanel>
                                <StackPanel Margin="0,5,0,5" Orientation="Horizontal">
                                    <TextBlock Margin="0,0,10,0" Text="数据库状态：" />
                                    <TextBlock
                                        Width="160"
                                        Classes="input1"
                                        Text="{Binding Database.State}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox
                                        Margin="0,0,5,0"
                                        Content="启用数据库"
                                        IsChecked="{Binding Database.EnableData}" />
                                    <Button
                                        Width="100"
                                        Height="25"
                                        Command="{Binding Database.TestConnect}"
                                        Content="{Binding Database.Button}" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </WrapPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Margin="0,0,0,5" Header="文本设置">
                <ScrollViewer>
                    <StackPanel>
                        <Border
                            Margin="5"
                            VerticalAlignment="Top"
                            Classes="t2">
                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,5"
                                    FontSize="17"
                                    Text="维护提示文本" />
                                <TextBox
                                    Height="80"
                                    AcceptsReturn="True"
                                    Text="{Binding Config.MessageFix}"
                                    Watermark="维护提示文本" />
                            </StackPanel>
                        </Border>
                        <Border
                            Margin="5"
                            VerticalAlignment="Top"
                            Classes="t2">
                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,5"
                                    FontSize="17"
                                    Text="未知指令文本" />
                                <TextBox
                                    Height="80"
                                    AcceptsReturn="True"
                                    Text="{Binding Config.MessageUnknow}"
                                    Watermark="未知指令文本" />
                            </StackPanel>
                        </Border>
                        <Border
                            Margin="5"
                            VerticalAlignment="Top"
                            Classes="t2">
                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,5"
                                    FontSize="17"
                                    Text="不能绑定文本" />
                                <TextBox
                                    Height="80"
                                    AcceptsReturn="True"
                                    Text="{Binding Config.MessageBind}"
                                    Watermark="不能绑定文本" />
                            </StackPanel>
                        </Border>
                        <Border
                            Margin="5"
                            VerticalAlignment="Top"
                            Classes="t2">
                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,5"
                                    FontSize="17"
                                    Text="没有绑定名字提示" />
                                <TextBox
                                    Height="80"
                                    AcceptsReturn="True"
                                    Text="{Binding Config.MessageNo}"
                                    Watermark="没有绑定名字提示" />
                            </StackPanel>
                        </Border>
                        <Border
                            Margin="5"
                            VerticalAlignment="Top"
                            Classes="t2">
                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,5"
                                    FontSize="17"
                                    Text="重复绑定名字提示" />
                                <TextBox
                                    Height="80"
                                    AcceptsReturn="True"
                                    Text="{Binding Config.MessageIsBind}"
                                    Watermark="重复绑定名字提示" />
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </dialog:DialogHost>
</Window>
